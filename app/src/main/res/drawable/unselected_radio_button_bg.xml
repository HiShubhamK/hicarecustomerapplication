<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Outer shape representing the border -->
<item>
    <shape android:shape="oval">
        <solid android:color="@android:color/transparent" />
        <stroke
            android:width="2dp"
            android:color="@color/grey_font" />
        <size
            android:width="30dp"
            android:height="30dp" />
    </shape>
</item>
<!-- Inner shape representing the checked color with a margin -->
<item
    android:bottom="2dp"
    android:left="2dp"
    android:right="2dp"
    android:top="2dp">
    <shape android:shape="oval">
        <solid android:color="@android:color/white" />
        <size
            android:width="26dp"
            android:height="26dp" />
    </shape>
</item>
</layer-list>
