<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.view.activities.BookingPaymentActivity">

    <RelativeLayout
        android:id="@+id/lnrlottiimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imgOffer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/paymentsuccessful"
            android:layout_marginTop="70dp"
            android:layout_centerInParent="true"
            android:layout_gravity=""
            android:visibility="gone"/>
        <!--    </com.airbnb.lottie.LottieAnimationView>-->

        <com.airbnb.lottie.LottieAnimationView

            android:id="@+id/imgOffererror"
            android:layout_width="150dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/error_occurred"
            android:layout_height="150dp"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/randomimg"
            android:src="@drawable/circle_background"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtpayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Successful !"
        android:fontFamily="@font/lato_semibold"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/lnrlottiimg"
        android:visibility="gone"/>


</RelativeLayout>