<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

<androidx.cardview.widget.CardView
    android:layout_width="300dp"
    android:layout_height="190dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:cardElevation="0dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    style="@style/RatingBackground"
    android:layout_margin="7dp"
    app:cardCornerRadius="12dp"
    android:focusable="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/avatar"
            android:layout_marginTop="10sp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shahid"
            style="@style/FanBookNameTextStyle"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="15dp"
            android:singleLine="false"
            android:lines="5"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/FanBookDescrTextStyle"
            android:text="I am very pleased with the work by HiCare and I thank you particularly for doing all the coordination and getting things done. Great work! Will engage with HiCare in future too."/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>